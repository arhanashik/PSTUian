<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AppTheme.Home" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="TextButton" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextButton.Small" parent="TextButton">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextButton.Medium" parent="TextButton">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="MaterialCardView.Settings" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/space_16dp</item>
        <item name="android:layout_marginTop">@dimen/space_10dp</item>
        <item name="android:layout_marginEnd">@dimen/space_16dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_height">76dp</item>
        <item name="android:layout_marginStart">@dimen/space_8dp</item>
        <item name="android:layout_marginTop">@dimen/space_5dp</item>
        <item name="android:layout_marginEnd">@dimen/space_8dp</item>
        <item name="android:layout_marginBottom">@dimen/space_8dp</item>
    </style>

    <style name="TextView.Title" parent="android:Widget.TextView">
        <item name="android:padding">@dimen/space_16dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.TitleSmall" parent="android:Widget.TextView">
        <item name="android:paddingTop">@dimen/space_16dp</item>
        <item name="android:paddingStart">@dimen/space_16dp</item>
        <item name="android:paddingEnd">@dimen/space_16dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.TitleSmall2" parent="android:Widget.TextView">
        <item name="android:paddingTop">@dimen/space_16dp</item>
        <item name="android:paddingStart">@dimen/space_16dp</item>
        <item name="android:paddingEnd">@dimen/space_16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvInformation" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_10dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="IvInformationIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_10dp</item>
        <item name="android:layout_marginEnd">@dimen/space_10dp</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="CardViewStyle.Slider" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">64dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">64dp</item>
    </style>

    <!--  Text View styles for Batch Card  -->
    <style name="TvStyleBatchName" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/space_16dp</item>
        <item name="android:layout_marginTop">@dimen/space_16dp</item>
        <item name="android:layout_marginEnd">@dimen/space_16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TvStyleBatchTitle" parent="android:Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TvStyleBatchInfoLabel" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TvStyleBatchInfo" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/space_16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--  Text View styles for Teacher Card  -->
    <style name="TvStyleTeacherInfoLabel" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TvStyleTeacherInfo" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/space_16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--  Text View styles for Course Card  -->
    <style name="TvStyleCourseInfoLabel" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TvStyleCourseInfo" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--  Text View styles for Student Card  -->
    <style name="TvStyleStudentInfoLabel" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TvStyleStudentInfo" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/space_16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Material dialog style -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--  Text View styles for Student Profile  -->
    <style name="TvStyleStudentProfileInfoLabel" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="TvStyleStudentProfileInfo" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/space_16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textIsSelectable">true</item>
    </style>
</resources>
