<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_space"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginEnd="@dimen/default_space"
        android:layout_marginBottom="@dimen/dp8"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:id="@+id/label_info"
            style="@style/TvStyleStudentProfileInfoLabel"
            tools:text="@string/txt_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_info"
            style="@style/TvStyleStudentProfileInfo"
            tools:text="1302018"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/default_space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_info"
            app:layout_constraintEnd_toStartOf="@id/btn_action"/>

    <ImageView
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_download"
            app:tint="@color/colorPrimary"
            android:contentDescription="@string/description_ic_call"
            app:layout_constraintTop_toTopOf="@id/label_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_info"/>

</androidx.constraintlayout.widget.ConstraintLayout>