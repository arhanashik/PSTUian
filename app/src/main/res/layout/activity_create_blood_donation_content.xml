<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_create_blood_donation">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_request_id"
                style="@style/TextInputLayoutAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_space"
                android:layout_marginTop="@dimen/default_space"
                android:layout_marginEnd="@dimen/default_space"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="@string/hint_request_id"
                app:helperText="@string/helper_text_blood_donation_request_id">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_request_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/default_space"
                    android:paddingEnd="@dimen/default_space"
                    android:textColor="?attr/customPrimaryTextColor"
                    android:textColorHint="?attr/customSecondaryTextColor"
                    android:textSize="18sp"
                    android:inputType="number"
                    tools:text="2" />
            <requestFocus/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_date"
                style="@style/TextInputLayoutAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_space"
                android:layout_marginTop="@dimen/default_space"
                android:layout_marginEnd="@dimen/default_space"
                app:layout_constraintTop_toBottomOf="@id/til_request_id">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/default_space"
                    android:paddingEnd="@dimen/default_space"
                    android:hint="@string/hint_donation_date"
                    tools:text="@tools:sample/date/ddmmyy"
                    android:textColor="?attr/customPrimaryTextColor"
                    android:textColorHint="?attr/customSecondaryTextColor"
                    android:textSize="18sp"
                    android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_info"
                style="@style/TextInputLayoutAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_space"
                android:layout_marginTop="@dimen/default_space"
                android:layout_marginEnd="@dimen/default_space"
                app:layout_constraintTop_toBottomOf="@id/til_date"
                app:helperText="@string/helper_txt_max_length_blood_donation_message">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/default_space"
                    android:paddingEnd="@dimen/default_space"
                    android:hint="@string/hint_message"
                    tools:text="@tools:sample/lorem/random"
                    android:textColor="?attr/customPrimaryTextColor"
                    android:textColorHint="?attr/customSecondaryTextColor"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:lines="5"
                    android:inputType="textMultiLine"
                    android:maxLength="500"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fab_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_space"
                android:text="@string/txt_create_new"
                app:icon="@drawable/ic_check_circle_outline"
                app:backgroundTint="?attr/backgroundColor"
                app:layout_constraintTop_toBottomOf="@id/til_info"
                app:layout_constraintEnd_toEndOf="parent"/>

        <View
                android:id="@+id/divider_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/default_space"
                app:layout_constraintTop_toBottomOf="@id/fab_create"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>